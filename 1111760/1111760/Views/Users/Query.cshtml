@model IEnumerable<_1111760.Models.User>

@{
    ViewData["Title"] = "Query";
}


<h1>Query</h1>

@if (Model.Count() == 0)
{
    <div class="alert alert-info">
        <strong>無符合之資料</strong>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">編輯</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">詳細</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">刪除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<p><a asp-action="Create">新增項目</a></p>



